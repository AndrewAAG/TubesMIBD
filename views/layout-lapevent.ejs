<%- include("navbarowner.ejs") %>

    <div class="layoutBody">
    <div class="container">
      <h1><%= heading %></h1>

      <div class="top-bar">
        <form action="/owner/lapevent" method="GET">
        <div class="search">
          <label>Find</label>
          <div class="search-box">
            <input type="text" name="search" placeholder="Search Client Name ..." />
            <span class="search-icon">&#128269;</span>
          </div>
        </div>
        </form>

      </div>

      <div class="table-wrapper">
        <table>
          <thead>
            <tr>
              <% columns.forEach(col => { %>
              <th><%= col %></th>
              <% }) %>
            </tr>
          </thead>
          <tbody>
            <% events.forEach(event => { %>
            <tr>
              <td><%= event.nama %></td>
              <td><%= event.nama_jenis%></td>
              <td><%= event.tanggal%></td>
              <td><%= event.status%></td>
              <td><%= event.nama_asisten%></td>
              <td style="color: #8c5a28; font-weight: bold;"><a href="/owner/lapevent/detail/<%=event.id_event%>" style="text-decoration: none; color: inherit;"> Details </td></a>
            </tr>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="pagination">
          <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>">Previous</a>
          <% } %>

          <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>">Next</a>
          <% } %>
        </div>
    </div>
    </div>
  </body>
</html>